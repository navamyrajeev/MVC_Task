@model IEnumerable<MBG.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Employee List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    @if (@ViewBag.isHighlighted != null)
    {
    <tr>
        <td colspan="4" align="center">
            <span class="field-validation-error" style="color:red;" id="spanfile">@ViewBag.isHighlighted</span>
        </td>
    </tr>
    }
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr @if (item.DocCount < 3) { <text> style="background-color:silver;" </text> }>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmpId }) |
                @Html.ActionLink("View", "Detail", new { id = item.EmpId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmpId })
            </td>
        </tr>
    }

</table>
